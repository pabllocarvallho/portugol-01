programa {
  funcao inicio() {
    //Construa um algoritmo em PORTUGOL que determine (imprima) se um dado número N inteiro (recebido através do teclado) é PAR ou ÍMPAR.

    inteiro x

    escreva("Digite um valor: ")
    leia(x)

    se( x % 2 == 0 ){
      escreva("Número é par")
    }
    senao {
      escreva("Numero é impar")
    }

    
  }
}
